    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-transform-css": "^2.0.0",
    "lint-staged": "^9.4.1",
    "prettier": "1.18.2",
    "react-test-renderer": "^16.10.2",
    "require-context.macro": "^1.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
