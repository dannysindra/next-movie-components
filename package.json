  "module": "dist/index.js",
  "files": [ "dist", "README.md" ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "update-snapshot": "jest --updateSnapshot",
    "storybook": "start-storybook -p 6006",
