    "baseui": "^9.7.1",
    "classnames": "^2.2.6",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "styletron-engine-atomic": "^1.4.1",
    "styletron-react": "^5.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
